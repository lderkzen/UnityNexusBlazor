<Bar Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small" Breakpoint="Breakpoint.Widescreen"
    NavigationBreakpoint="Breakpoint.Desktop" ThemeContrast="ThemeContrast.Dark" Background="Background.Body"
    TextColor="TextColor.Light">
    <BarToggler />
    <BarBrand Background="Background.Body" Class="bar-brand">
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="customBrand" />
                UnityNexus
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem Class="nav-item">
                <BarLink To="/groups">
                    <BarIcon IconName="IconName.Users" />
                    Groups
                </BarLink>
            </BarItem>
            <BarItem Class="nav-item">
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Wrench" />
                        Admin
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/admin/groups/manage">Groups</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem Class="nav-item">
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.ExclamationTriangle" />
                        Test
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarItem>
                            <BarLink To="/counter">Counter</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="/weather">Weather</BarLink>
                        </BarItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>

